{
  "name": "npm-workspaces-vscode",
  "displayName": "npm workspaces lsp client",
  "description": "npm, yarn and pnpm workspaces lsp",
  "version": "0.0.1",
  "author": "AkisArou <akisarou90@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/AkisArou/npm-workspaces-lsp"
  },
  "license": "MIT",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "lsp"
  ],
  "scripts": {
    "compile": "npm run check-types && node esbuild.mjs",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.mjs --production && pnpx @vscode/vsce package --no-dependencies",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "npm-workspaces-language-server": "workspace:*",
    "vscode-languageclient": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "esbuild": "catalog:",
    "@vscode/vsce": "catalog:",
    "@types/vscode": "*"
  },
  "activationEvents": [
    "onLanguage:json"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "npm-workspaces configuration",
      "properties": {
        "npm-workspaces.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable npm-workspaces extension"
        }
      }
    }
  }
}
